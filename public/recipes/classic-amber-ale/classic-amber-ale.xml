<?xml version="1.0" encoding="UTF-8"?>
<RECIPES>
  <RECIPE>
    <NAME>Classic Amber Ale</NAME>
    <VERSION>1</VERSION>
    <TYPE>All Grain</TYPE>
    <BREWER>BrewLab Assistant</BREWER>
    <BATCH_SIZE UNIT="l">19.0</BATCH_SIZE>
    <BOIL_SIZE UNIT="l">25.0</BOIL_SIZE>
    <BOIL_TIME UNIT="min">60</BOIL_TIME>
    <EFFICIENCY UNIT="%">72</EFFICIENCY>
    <NOTES>A balanced, malt-forward amber ale with a hint of citrus and pine from classic American hops. Easy drinking and satisfying.</NOTES>
    <OG>1.052</OG>
    <FG>1.012</FG>
    <ABV>5.25</ABV>
    <IBU>35</IBU>
    <COLOR>12</COLOR>

    <STYLE>
      <NAME>American Amber Ale</NAME>
      <CATEGORY>Amber and Brown American Beer</CATEGORY>
      <CATEGORY_NUMBER>19</CATEGORY_NUMBER>
      <STYLE_LETTER>A</STYLE_LETTER>
      <OG_MIN>1.045</OG_MIN>
      <OG_MAX>1.060</OG_MAX>
      <FG_MIN>1.010</FG_MIN>
      <FG_MAX>1.015</FG_MAX>
      <IBU_MIN>25</IBU_MIN>
      <IBU_MAX>40</IBU_MAX>
      <COLOR_MIN>10</COLOR_MIN>
      <COLOR_MAX>17</COLOR_MAX>
    </STYLE>

    <FERMENTABLES>
      <FERMENTABLE>
        <NAME>Pale Malt (2 Row) US</NAME>
        <AMOUNT UNIT="kg">3.5</AMOUNT>
        <TYPE>Grain</TYPE>
        <YIELD>79</YIELD>
        <COLOR>2</COLOR>
      </FERMENTABLE>
      <FERMENTABLE>
        <NAME>Crystal Malt - 60L</NAME>
        <AMOUNT UNIT="kg">0.5</AMOUNT>
        <TYPE>Grain</TYPE>
        <YIELD>74</YIELD>
        <COLOR>60</COLOR>
      </FERMENTABLE>
      <FERMENTABLE>
        <NAME>Victory Malt</NAME>
        <AMOUNT UNIT="kg">0.25</AMOUNT>
        <TYPE>Grain</TYPE>
        <YIELD>73</YIELD>
        <COLOR>25</COLOR>
      </FERMENTABLE>
    </FERMENTABLES>

    <HOPS>
      <HOP>
        <NAME>Cascade</NAME>
        <AMOUNT UNIT="g">20</AMOUNT>
        <USE>Boil</USE>
        <TIME UNIT="min">60</TIME>
        <ALPHA UNIT="%">5.5</ALPHA>
        <FORM>Pellet</FORM>
      </HOP>
      <HOP>
        <NAME>Centennial</NAME>
        <AMOUNT UNIT="g">15</AMOUNT>
        <USE>Boil</USE>
        <TIME UNIT="min">15</TIME>
        <ALPHA UNIT="%">10.0</ALPHA>
        <FORM>Pellet</FORM>
      </HOP>
      <HOP>
        <NAME>Cascade</NAME>
        <AMOUNT UNIT="g">15</AMOUNT>
        <USE>Aroma</USE>
        <TIME UNIT="min">5</TIME>
        <ALPHA UNIT="%">5.5</ALPHA>
        <FORM>Pellet</FORM>
      </HOP>
    </HOPS>

    <YEASTS>
      <YEAST>
        <NAME>SafAle US-05</NAME>
        <TYPE>Ale</TYPE>
        <FORM>Dry</FORM>
        <AMOUNT UNIT="g">11.5</AMOUNT>
        <LABORATORY>Fermentis</LABORATORY>
        <ATTENUATION UNIT="%">78</ATTENUATION>
      </YEAST>
    </YEASTS>

    <MISCS>
      <MISC>
        <NAME>Irish Moss</NAME>
        <AMOUNT UNIT="tsp">1.0</AMOUNT>
        <USE>Boil</USE>
        <TIME UNIT="min">15</TIME>
        <NOTES>Add one teaspoon or one tablet for clarity.</NOTES>
      </MISC>
    </MISCS>

    <MASH>
      <NAME>Single Infusion, Medium Body</NAME>
      <MASH_STEPS>
        <MASH_STEP>
          <NAME>Saccharification</NAME>
          <TYPE>Infusion</TYPE>
          <STEP_TEMP UNIT="C">67</STEP_TEMP>
          <STEP_TIME UNIT="min">60</STEP_TIME>
          <INFUSE_AMOUNT UNIT="l">12</INFUSE_AMOUNT>
          <DESCRIPTION>Mash in at 67°C and hold for 60 minutes.</DESCRIPTION>
        </MASH_STEP>
        <MASH_STEP>
          <NAME>Mash Out</NAME>
          <TYPE>Temperature</TYPE>
          <STEP_TEMP UNIT="C">76</STEP_TEMP>
          <STEP_TIME UNIT="min">10</STEP_TIME>
          <DESCRIPTION>Raise temperature to 76°C and hold for 10 minutes for mash out.</DESCRIPTION>
        </MASH_STEP>
      </MASH_STEPS>
    </MASH>

  </RECIPE>
</RECIPES>